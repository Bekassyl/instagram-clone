<ul class="list-group">
  <% @users.each do |user| %>
    <% if current_user == user %>
      <% next %>
    <% end %>

    <li class="list-group-item">
         <%= image_tag user.avatar(:thumbnail), class: "img-circle-mini" %>
         <%= link_to user.login, user %>
         <div class="follow" id="user-<%= user.id%>">
            <%= follows?(user) %>
         </div>
    </li>
  <% end %>
</ul>
